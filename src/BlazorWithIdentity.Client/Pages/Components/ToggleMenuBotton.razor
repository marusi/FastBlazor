@inject ViewOptionService ViewOption

@if (ViewOption.IsNavigationVisible)
{
    <button @onclick="ViewOption.Toggle" class="btn btn-primary"><span class="glyph glyph-left" aria-hidden="true"></span> Hide Menu</button>
}
else
{
    <button @onclick="ViewOption.Toggle"  class="btn btn-primary"><span class="glyph glyph-right" aria-hidden="true"></span> Show Menu</button>
}





