
@using Microsoft.Fast.Components.FluentUI

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">


<ul class="list-items">
        <li class="list-items-row">
            <div class="row">
                <div class="col-md-24">  <!-- if you want more than one column at a narrow viewport-->
                   <NavLinkFluentAnchor Match="NavLinkMatch.All" Href="/Category" Appearance="Appearance.Outline">Category</NavLinkFluentAnchor>      <!-- adjust the grid settings appropriately-->
                </div>
                
               
            </div>
        </li>
      <li class="list-items-row">
            <div class="row">
                <div class="col-md-24">  <!-- if you want more than one column at a narrow viewport-->
                    <NavLinkFluentAnchor Href="/product" Appearance="Appearance.Outline">Product Name</NavLinkFluentAnchor>
                </div>
                
               
            </div>
        </li>
         <li class="list-items-row">
            <div class="row">
                <div class="col-md-24">  <!-- if you want more than one column at a narrow viewport-->
                    <NavLinkFluentAnchor Href="/option" Appearance="Appearance.Outline">Option</NavLinkFluentAnchor>
                </div>
                
               
            </div>
        </li> 
         <li class="list-items-row">
            <div class="row">
                <div class="col-md-24">  <!-- if you want more than one column at a narrow viewport-->
                    <NavLinkFluentAnchor Href="/optionvalue" Appearance="Appearance.Outline">Option Value</NavLinkFluentAnchor>
                </div>
                
               
            </div>
        </li> 
    </ul>
   

</div>
                      
                     
            


                 
                

               
           









@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
